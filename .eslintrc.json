{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "mocha": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}
